{
  "compilerOptions": {
    "rootDir": ".",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["es5", "es6", "esnext", "dom", "dom.iterable"],
    "outDir": "build"
  },
  "include": [
    "src/**/*"
    //,"test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
